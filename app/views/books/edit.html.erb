<h2>Editing Book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>

  <p>Title</p>
  <%= f.text_field :title, class: "follow_title" %>

  <p>Body</p>
  <%= f.text_area :body, class: "follow_body" %>

  <%= f.submit 'Update Book', class: "follow_submit" %>

  <%= link_to "show", book_path(@book.id) %>
  <%= link_to "Back", books_path(@books) %>

<% end %>