<div>
  <%= flash[:notice] %>
</div>

<h3>Books</h3>
　<table>
　  <!--<thead>-->
　  <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    <!--</thead>-->
    <% @books.each do |book| %>
    <div class="bookList">
      <tr>
      <td class="bookListTitle"><%= book.title %></td>
      <td class="bookListBody"><%= book.body %></td>
      <td class="bookListShow"><%= link_to "show", book_path(book.id) %></td>
      <td class="bookListEdit"><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td class="bookListDestroy"><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
    </div>
    <% end %>
  </table>


<h3>New book</h3>
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: '/books', method: :post do |f| %>

  <h6>Title</h6>
  <%= f.text_field :title %>

  <h6>Body</h6>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>
